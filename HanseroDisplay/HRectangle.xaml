        <Border Height="8" Width="8" BorderThickness="1" BorderBrush="White" VerticalAlignment="Top" HorizontalAlignment="Right" MouseLeftButtonDown="Border_NE_MouseLeftButtonDown" MouseLeftButtonUp="Border_MouseLeftButtonUp" MouseEnter="Label_NESW_MouseEnter" MouseLeave="Label_MouseLeave">
